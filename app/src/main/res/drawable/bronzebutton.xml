<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="9dip" />
            <stroke android:width="3dp" android:color="#e88013" />
            <gradient android:angle="-90" android:startColor="#fcb017" android:endColor="#FFD700"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="9dip" />
            <stroke android:width="3dp" android:color="#cd7f32" />
            <solid android:color="#d18d06"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="9dip" />
            <stroke android:width="3dp" android:color="#e88013" />
            <gradient android:angle="-90" android:startColor="#fcb017" android:endColor="#FFD700" />
        </shape>
    </item>
</selector>